<form action="/articles/<%= @article.id %>" method="post">
  <div>Title: 
    <input type="text" name="title" value="<%= @article.title %>"></div>
  <div>Content: 
    <input type="text" name="content" value="<%= @article.content %>"></div>
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <input type="submit" value="submit">
</form>